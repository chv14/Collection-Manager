<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>

<p>
  <a class='btn btn-primary' href='/movie/create' role='button'>New Movie</a>
  <a class='btn btn-primary' href='/genre' role='button'>Genre</a>
</p>

<table class='table table-striped table-bordered'>
  <tr>
    <th>
      <a href='/?sort=title&asc={{idAsc2}}'>Title</a><br />
      <form method='GET'>
        <input name='title' />
      </form>
    </th>
    <th>
      <a href='/?sort=year&asc={{idAsc3}}'>Year</a><br />
      <form>
        <input name='year' />
      </form>
    </th>
    <th>
      <a href='/?sort=region&asc={{idAsc4}}'>Region</a><br />
      <form>
        <input name='region' />
      </form>
    </th>
    <th>
      <a href='/?sort=ratings&asc={{idAsc5}}'>Ratings</a><br />
      <form>
        <input name='ratings' />
      </form>
    </th>
    <th>
      <a href='/?sort=genre_description&asc={{idAsc6}}'>Description</a><br />
      <form>
        <input name='genre_description' />
      </form>
    </th>
    <th>
      <a href='/?sort=actfirstname&asc={{idAsc7}}'>Actor First Name</a><br />
      <form>
        <input name='actfirstname' />
      </form>
    </th>
    <th>
      <a href='/?sort=actlastname&asc={{idAsc8}}'>Actor Last Name</a><br />
      <form>
        <input name='actlastname' />
      </form>
    </th>
    <th>
      <a href='/?sort=actgender&asc={{idAsc9}}'>Actor Gender</a><br />
      <form>
        <input name='actgender' />
      </form>
    </th>
    <th>
      <a>Actions</a><br />
    </th>
  </tr>
  {{#each rows}}
    <tr>
      <td>{{title}}</td>
      <td>{{year}}</td>
      <td>{{region}}</td>
      <td>{{ratings}}</td>
      <td>{{description}}</td>
      <td>{{actfirstname}}</td>
      <td>{{actlastname}}</td>
      <td>{{actgender}}</td>

      <td>
        <a class='btn btn-primary' href='/movie/{{mid}}' role='button'>View
        </a>
        <a class='btn btn-success' href='/movie/{{mid}}/edit' role='button'>Edit
        </a>
        <a
          class='btn btn-danger'
          href='/movie/{{mid}}/delete'
          role='button'
        >Delete
        </a>
      </td>
    </tr>

  {{/each}}
</table>